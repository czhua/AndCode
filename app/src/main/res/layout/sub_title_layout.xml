<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/sub_title_layout"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/sub_title_rl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/title_bg" >

                <LinearLayout
                    android:id="@+id/sub_title_left_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" >

                    <ImageView
                        android:id="@+id/sub_title_left_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="28dp"
                        android:paddingTop="8dp"
                        android:src="@drawable/title_back_white"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/sub_title_left_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginLeft="4dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="left"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sub_title_center_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="title"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/sub_title_right_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/sub_title_right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="right"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <View
                android:id="@+id/sub_title_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="0.05dp"
                android:layout_marginTop="0dp"
                android:background="@color/line_gray" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/web_progressbar_title"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:indeterminateOnly="false"
            android:layout_marginTop="46dp"
            android:max="100"
            android:progress="0"
            android:visibility="gone"
            android:progressDrawable="@drawable/progress_drawable" />
    </FrameLayout>

</LinearLayout>